@model NauAnUtLanh.Dashboard.Models.ChangePassViewModel
@{
    ViewBag.Title = "Thông tin tài khoản";
}

<h2>@ViewBag.Title</h2>
<h4>Đổi mật khẩu</h4>
<hr/>
@using (@Html.BeginForm("changepassword", "personal", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger"})
    <p class="text-success">@($"{ViewData["message"]}")</p>
    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.CurrentPassword, new {@class = "form-control", @placeholder = "Mật khẩu hiện tại"})
            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control", @placeholder = "Mật khẩu mới"})
            @Html.ValidationMessageFor(m => m.NewPassword, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmNewPassword, new {@class = "form-control", @placeholder = "Xác nhận mật khẩu"})
            @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Cập nhật" class="btn btn-primary"/>
        </div>
    </div>
}
<hr/>
@Html.ActionLink("Trở về", "manage", "personal")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
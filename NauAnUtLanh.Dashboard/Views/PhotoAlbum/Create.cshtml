@model NauAnUtLanh.Dashboard.Models.PhotoAlbumViewModel

@{
    ViewBag.Title = "Hình ảnh hoạt động";
}

<h2>@ViewBag.Title</h2>
<h4>Tạo album ảnh</h4>
<hr />
@using (Html.BeginForm("create", "photoalbum", FormMethod.Post, new {@class="form-horizontal",@enctype="multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">

        <div class="col-md-3">
            @Html.TextBoxFor(model => model.AlbumName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            @Html.CheckBoxFor(model => model.Activated, new { @class = "checkbox-inline"}) Hiển thị
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <input type="file" class="form-control" data-toggle="tooltip" data-placement="right" title="Upload ảnh cho album" name="ImageFiles" multiple/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <input type="submit" value="Tạo album" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "index")
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        })
    </script>
}
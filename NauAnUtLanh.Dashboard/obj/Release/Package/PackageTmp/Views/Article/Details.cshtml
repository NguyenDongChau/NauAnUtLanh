@model NauAnUtLanh.Database.Article

@{
    ViewBag.Title = Model.ArticleTitle;
}

<div class="article-container">
    <div class="article-header">
        <div class="article-title">@Model.ArticleTitle</div>
        <div class="article-avatar-container">
            <img src="@Url.Content($"~/upload/article/avatar/{Model.ArticleAvatar}")" alt="@Model.ArticleTitle" class="article-avatar" />
        </div>
        <div class="article-post-time">@($"{Model.CreatedTime:yyyy/MM/dd hh:mm:ss}")</div>
    </div>
    <div class="article-content">@Html.Raw(WebUtility.HtmlDecode(Model.ArticleContent))</div>

    <hr />
    <div class="article-metadata">
        <p>Mô tả tóm tắt: <span class="text-info">@Model.ShortDescription</span></p>
        <p>Từ khóa: <span class="text-info">@Model.Keywords</span></p>
    </div>
</div>
                    
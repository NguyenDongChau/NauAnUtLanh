@model NauAnUtLanh.Dashboard.Models.CategoryViewModel

@{
    ViewBag.Title = "Danh sách loại món ăn";
}

@using (@Html.BeginForm("edit", "category", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h4>Hiệu chỉnh</h4>
    <hr />

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.CategoryName, new {@class = "form-control", @placeholder = "Tên loại món ăn"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.Activated, new { @class = "checkbox-inline" }) Kích hoạt
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
        </div>
    </div>
}
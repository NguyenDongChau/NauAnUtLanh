@using NauAnUtLanh.Database
@using PagedList.Mvc
@model PagedList.IPagedList<Food>

@{
    ViewBag.Title = "Món ăn";
    var db = new NauAnUtLanhDbContext();
    var info = db.DefaultInfos.Find(Guid.Empty);
    ViewBag.MetaTitle = info?.CompanyName;
    ViewBag.MetaDescription = info?.MetaDescription;
    ViewBag.MetaKeywords = info?.MetaKeywords;
    ViewBag.MetaImage = Url.Content($"~/upload/{info?.MetaImage}");
    var catId = Convert.ToInt32(Request.QueryString["type"]);
    
}

<div class="menu-page">
    <div class="container">
        <div class="menu-title">
            <h3>Món ăn</h3>
        </div>
        <div class="col-lg-3 col-md-3 hidden-sm hidden-xs" id="food-category"></div>
        <div class="hidden-lg hidden-md col-sm-12 col-xs-12" id="list-food-category"></div>
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            @{
                foreach (var food in Model)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                        @{
                            if (!string.IsNullOrEmpty(food.Avatar))
                            {
                                <div class="thumbnail">
                                    <a href="@Url.Content($"~/upload/food/{food.Avatar}")">
                                        <img src="@Url.Content($"~/upload/food/{food.Avatar}")" alt="Lights" style="width: 100%; height: 100%" class="img-responsive">
                                        <div class="caption">
                                            <p>@food.FoodName</p>
                                        </div>
                                    </a>
                                </div>
                                
                            }
                            else
                            {
                                <div class="thumbnail">
                                    <a href="@Url.Content("~/images/food-disk-icon.png")">
                                        <img src="@Url.Content("~/images/food-disk-icon.png")" alt="Lights" style="width: 100%; height: 100%" class="img-responsive">
                                        <div class="caption">
                                            <p>@food.FoodName</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                        
                    </div>
                }
            }
            <div class="clearfix"></div>
            <div class="col-md-12">
                @Html.PagedListPager(Model, page => Url.Action("index", new { page , type = catId}))    
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("getcategories","category")',
                dataType: "html",
                success: function (partialView) {
                    $("#food-category").html(partialView);
                    $("#food-category").css("display", "block");
                },
                error: function (ex) {
                    //alert("Cann't show popup: " + ex);
                }
            });

            $.ajax({
                type: "GET",
                url: '@Url.Action("getcategoriesforsmall","category")',
                dataType: "html",
                success: function (partialView) {
                    $("#list-food-category").html(partialView);
                    $("#list-food-category").css("display", "block");
                },
                error: function (ex) {
                    //alert("Cann't show popup: " + ex);
                }
            });
        })
    </script>
}
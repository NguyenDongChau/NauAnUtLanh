@using NauAnUtLanh.Database
@using PagedList.Mvc
@model PagedList.IPagedList<PhotoAlbum>
@{
    ViewBag.Title = "Hình ảnh";
    var db = new NauAnUtLanhDbContext();
    var info = db.DefaultInfos.Find(Guid.Empty);
    ViewBag.MetaTitle = info?.CompanyName;
    ViewBag.MetaDescription = info?.MetaDescription;
    ViewBag.MetaKeywords = info?.MetaKeywords;
    ViewBag.MetaImage = Url.Content($"~/upload/{info?.MetaImage}");
}
<div class="contact">
    <div class="container">
        <div class="menu-title">
            <h3>Hình ảnh</h3>
        </div>
        <div class="clearfix"></div>

        @{
            foreach (var album in Model)
            {
                <div class="contact-grids">
                    <div class="title cnt-inpt">
                        <h3>@album.AlbumName</h3>
                    </div>
                    @{
                        var path = $"~/upload/album/{album.Id}";
                        var folder = Server.MapPath($"{path}");
                        var files = Directory.GetFiles(folder).ToList();
                        foreach (var img in files)
                        {
                            var imgName = new FileInfo(img).Name;
                            <div class="col-lg- col-md-4 col-sm-6 col-xs-6">
                                <div class="thumbnail">
                                    <a href="@Url.Content($"{path}/{imgName}")" data-lightbox="roadtrip">
                                        <img src="@Url.Content($"{path}/{imgName}")" alt="@imgName" style="width: 100%; height: 100%">
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
                        }
        }

        @Html.PagedListPager(Model, page => Url.Action("index", new { page }))
    </div>
</div>

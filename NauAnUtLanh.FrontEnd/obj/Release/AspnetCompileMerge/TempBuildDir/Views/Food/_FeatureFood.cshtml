@model IEnumerable<NauAnUtLanh.Database.Food>

<div class="container">
    <div class="title cnt-title">
        <h3>Món ăn ưa thích</h3>
    </div>
    <div class="row">
        @{
            foreach (var food in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="menu-grids-info">
                        <img src="@Url.Content($"~/upload/food/{food.Avatar}")" alt="" title="@food.FoodName" class="img-responsive thumbnail"/>
                        <h3 class="text-primary text-uppercase">@food.FoodName</h3>
                    </div>
                    
                </div>
            }
        }
    </div>
    <div class="clearfix"></div>
    <br />
    <div class="text-center">
        @Html.ActionLink("Xem thêm", "index", "food", new { id = "loadMore" })
    </div>
</div>

